{{template "layout.tmpl" .}}

<div class="container mt-4">
  <h1 class="mb-3">Блюда и товары</h1>

  <a class="btn btn-primary mb-3" href="/admin/foods/new">+ Новое</a>

  <table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Название</th>
        <th>Категория</th>
        <th style="width: 180px;"></th>
      </tr>
    </thead>
    <tbody>
      {{range .Items}}
      <tr>
        <td>{{.Name}}</td>
        <td>{{.CategoryName}}</td>
        <td>
          <a href="/admin/foods/edit?id={{.ID}}" class="btn btn-sm btn-outline-secondary">Править</a>
          <a href="/admin/foods/compose?id={{.ID}}" class="btn btn-sm btn-outline-info">Состав</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="3" class="text-center text-muted">Пока пусто</td>
      </tr>
      {{end}}
    </tbody>
  </table>
</div>
