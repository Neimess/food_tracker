{{template "layout.tmpl" .}}

<div class="container mt-4">
  <h1 class="mb-3">Категории блюд</h1>

  <a href="/admin/categories/new" class="btn btn-primary mb-3">+ Новая категория</a>

  <table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
      <tr>
        <th>Название</th>
        <th style="width: 120px;"></th>
      </tr>
    </thead>
    <tbody>
      {{range .Items}}
      <tr>
        <td>{{.Name}}</td>
        <td>
          <a href="/admin/categories/edit?id={{.ID}}" class="btn btn-sm btn-outline-secondary">Править</a>
        </td>
      </tr>
      {{end}}
    </tbody>
  </table>
</div>
